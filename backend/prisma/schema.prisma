generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AttendanceStatus {
  OCCURRED
  MISSED
  CANCELLED
}

enum OverrideType {
  CANCELLED
  REPLACED
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String
  name          String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  emailVerified Boolean  @default(false)

  streamsOwned       Stream[]              @relation("StreamOwner")
  streamMemberships  StreamMembership[]
  attendanceRecords  AttendanceRecord[]
  bulkEntries        BulkAttendanceEntry[]
  classOverridesMade ClassOverride[]
}

model Stream {
  id         String   @id @default(cuid())
  name       String
  streamCode String   @unique @default(cuid())
  ownerId    String
  isArchived Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  owner             User                  @relation("StreamOwner", fields: [ownerId], references: [id])
  members           StreamMembership[]
  timetables        Timetable[]
  attendanceRecords AttendanceRecord[]
  bulkEntries       BulkAttendanceEntry[]
  classOverrides    ClassOverride[]

  @@index([ownerId])
  @@index([isArchived])
}

model StreamMembership {
  id       String   @id @default(cuid())
  userId   String
  streamId String
  role     String   @default("member")
  joinedAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  stream Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)

  @@unique([userId, streamId])
  @@index([userId])
  @@index([streamId])
}

model ClassOverride {
  id                  String   @id @default(cuid())
  streamId            String
  classDate           DateTime
  originalSubjectName String
  originalStartTime   String?

  overrideType OverrideType

  replacementSubjectName String?
  replacementCourseCode  String?
  replacementStartTime   String?
  replacementEndTime     String?

  adminUserId String
  createdAt   DateTime @default(now())

  stream    Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)
  adminUser User   @relation(fields: [adminUserId], references: [id])

  @@unique([streamId, classDate, originalSubjectName])
  @@index([streamId, classDate])
  @@index([streamId, classDate, originalSubjectName], map: "override_stream_date_composite")
}

model Timetable {
  id         String    @id @default(cuid())
  streamId   String
  name       String
  validFrom  DateTime
  validUntil DateTime?
  createdAt  DateTime  @default(now())

  stream  Stream           @relation(fields: [streamId], references: [id], onDelete: Cascade)
  entries TimetableEntry[]

  @@index([streamId])
  @@index([validFrom])
  @@index([streamId, validFrom, validUntil], map: "timetable_stream_date_range")
}

model TimetableEntry {
  id          String  @id @default(cuid())
  timetableId String
  dayOfWeek   Int
  subjectName String
  courseCode  String?
  startTime   String?
  endTime     String?

  timetable Timetable @relation(fields: [timetableId], references: [id], onDelete: Cascade)

  @@index([timetableId])
  @@index([dayOfWeek])
}

model AttendanceRecord {
  id          String           @id @default(cuid())
  userId      String
  streamId    String
  subjectName String
  courseCode  String?
  classDate   DateTime
  status      AttendanceStatus @default(MISSED)
  markedAt    DateTime         @updatedAt

  isReplacement       Boolean @default(false)
  originalSubjectName String?
  originalCourseCode  String?
  originalStartTime   String?
  originalEndTime     String?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  stream Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)

  @@unique([userId, streamId, subjectName, classDate, isReplacement])
  @@index([userId, streamId, classDate, status])
  @@index([isReplacement])
  @@index([streamId, classDate, userId], map: "attendance_stream_date_composite")
}

model BulkAttendanceEntry {
  id               String   @id @default(cuid())
  userId           String
  streamId         String
  subjectName      String
  courseCode       String?
  attendedClasses  Int
  totalHeldClasses Int?
  calculationDate  DateTime @default(now())
  startDate        DateTime
  endDate          DateTime

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  stream Stream @relation(fields: [streamId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([streamId])
  @@index([subjectName])
}
